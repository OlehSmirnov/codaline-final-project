<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="@string/prefs_light_style"
        android:defaultValue="true"
        android:title="Style" />

    <ListPreference
        android:key="@string/prefs_units"
        android:defaultValue="@string/prefs_units_def_value"
        android:entries="@array/prefs_units_entries"
        android:entryValues="@array/prefs_units_values"
        android:title="Units of measurement"/>

    <PreferenceCategory android:title="Notifications">

    <SwitchPreference
        android:key="@string/prefs_sound_notifications"
        android:defaultValue="true"
        android:title="Notifications sound" />

    <SwitchPreference
        android:key="@string/prefs_vibro_notifications"
        android:defaultValue="true"
        android:title="Notifications vibration" />

    </PreferenceCategory>

</PreferenceScreen>