<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rv_auto_item_date"
        android:textSize="18sp"
        android:layout_toStartOf="@+id/rv_auto_item_icon"
        android:layout_toLeftOf="@id/rv_auto_item_icon"
        android:layout_marginRight="239dp"
        android:layout_marginEnd="239dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/rv_auto_item_wind"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/rv_auto_item_temp"
        android:layout_toStartOf="@+id/rv_auto_item_temp" />

    <TextView
        android:id="@+id/rv_auto_item_temp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/rv_auto_item_icon"
        android:layout_toStartOf="@+id/rv_auto_item_icon" />

    <ImageView
        android:id="@+id/rv_auto_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:id="@+id/view" />

</RelativeLayout>